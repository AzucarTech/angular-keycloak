{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./**/*",
    "./**/*.json"
  ],
  "exclude": [
    "package.json",
    "package-lock.json",
    "tsconfig.json",
    "dist",
    "node_modules",
  ],
  "compileOnSave": false,
}
